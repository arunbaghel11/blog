<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
  <style>
    body {
      background-color: #f8f9fa;
      background-image: url('https://wallpapercave.com/wp/1aqYrSf.jpg');
      background-size: cover;
      background-position: center;
      background-attachment: fixed;
    }

    .container {
      margin-top: 50px;
      animation: slideInRight 1.5s ease-in-out;
    }

    @keyframes slideInRight {
      from {
        opacity: 0;
        transform: translateX(-20px);
      }
      to {
        opacity: 1;
        transform: translateX(0);
      }
    } 

    .card {
      border: none;
      border-radius: 10px;
      transition: transform 0.2s ease-in-out;
      background: linear-gradient(45deg, #3498db, #2ecc71);
      opacity: 1;
      filter: brightness(5px);
    }

    .card:hover {
      transform: scale(1.03);
    }

    .card-title {
      color: #007bff;
      font-size: 1.5rem;
    }

    .card-subtitle {
      color: #6c757d;
    }

    .card-text {
      color: #343a40;
      height: 120px;
      overflow: hidden;
      text-overflow: ellipsis;
    }

    .btn {
      margin-top: 10px;
      transition: background-color 0.3s ease-in-out, transform 0.3s ease-in-out;
    }

    .btn:hover {
      background-color: #0056b3;
      transform: scale(1.05);
    }
  </style>
  
  <title>Blog</title>
</head>
<body>
  <div class="container">
    <h1 class="mb-4">Explore Our Blog</h1>
    <a href="/articles/new" class="btn btn-success">Create New Article</a>

    <div class="row mt-4">
      <% articles.forEach(article => { %>
        <div class="col-md-6 mb-4">
          <div class="card">
            <div class="card-body">
              <h4 class="card-title"><%= article.title %></h4>
              <div class="card-subtitle text-muted mb-2">
                <%= article.createdAt.toLocaleDateString() %>
              </div>
              <div class="card-text"><%= article.description %></div>
              <a href="articles/<%= article.slug %>" class="btn btn-primary">Read More</a>
              <a href="articles/edit/<%= article.id %>" class="btn btn-info">Edit</a>
              <form action="/articles/<%= article.id %>?_method=DELETE" method="POST" class="d-inline">
                <button type="submit" class="btn btn-danger">Delete</button>
              </form>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</body>
</html>
